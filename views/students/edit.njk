{% extends "layout.njk" %}

{% block content %}

    <div class="card">

        <section 
            class="avatar" style="background: url(https://source.unsplash.com/collection/8353395/500x500) no-repeat center center / cover">
        </section>

        <section class="details">
            <form action="/instructors?_method=PUT" method="POST" >
                <h3 class="class">Editar students</h3>

                {% include 'students/fields.njk' %}

                <input type="hidden" name="id" value="{{student.id}}">
            </form>

            <form id="form-delete"action="/students?_method=DELETE" method="POST" >
                <input type="hidden" name="id" value="{{student.id}}">
                <button type="submit">Deletar</button>
            </form>

        </section>

    </div>

{% endblock content %}